<div class="container my-5 border rounded p-4 bg-dark text-light">
  <div class="d-flex justify-content-between align-items-center">
    <h2 class="fw-bold text-primary mb-0">All Posts</h2>
  </div>
  <hr class="bg-light">
  {{#if posts.length}}
    <div class="row mt-4">
      {{#each posts as |post|}}
        <div class="col-lg-6 mb-4">
          {{> post-info post}}
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="text-center mt-5">
      <h6 class="fw-bold mb-3">There are currently no posts.</h6>
    </div>
  {{/if}}
</div>