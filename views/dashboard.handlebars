<div class="container my-5 border rounded p-4 bg-dark text-light">
  <div class="d-flex justify-content-between align-items-center">
    <h2 class="fw-bold text-primary mb-0">Dashboard: Your Posts</h2>
    <a href="/dashboard/create/" class="btn btn-outline-primary btn-sm">Create Post</a>
  </div>
  <hr class="bg-light">
  {{#if posts.length}}
    <div class="row mt-4">
      {{#each posts as |post|}}
        <div class="col-lg-6 mb-4">
          {{> post-info post}}
          <div class="d-flex justify-content-end mt-3">
            <a href="/dashboard/edit/{{post.id}}" class="btn btn-outline-warning btn-sm me-3">Edit Post</a>
          </div>
        </div>
      {{/each}}
    </div>
  {{else}}
    <div class="text-center mt-5">
      <h6 class="fw-bold mb-3">You do not currently have any posts.</h6>
    </div>
  {{/if}}
</div>
<script src="../js/addPost.js"></script>