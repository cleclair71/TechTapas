
<article class="bg-dark text-white p-5">

    <a href="homepage.handlebars" class="float-end text-white">&larr; Back to Dashboard</a>

    <h2 class="title mt-5">Edit Post</h2>

    <hr class="border-light">

    <form class="edit-post-form">
        <div class="mb-3">
            <label for="post-title" class="form-label">Post Title:</label>
            <input class="form-control" name="post-title" type="text" value="{{post.title}}" />
        </div>

        <div class="mb-3">
            <label for="post-content" class="form-label">Post Content:</label>
            <textarea class="form-control" name="post-content">{{post.post_content}}</textarea>
        </div>

        <div class="text-end mb-3">
            Created by you on {{format_date post.created_at}} |
            <a href="/post/{{post.id}}" class="text-white">{{post.comments.length}} {{format_plural "comment"
                post.comments.length}}</a>
        </div>

        <button type="submit" class="btn btn-primary me-2">Save Post</button>
                <button type="button" class="btn btn-primary delete-post-btn">Delete Post</button>
    </form>
    </article>
    {{> comments post.comments}}

    <script src="/javascript/editPost.js"></script>
    <script src="/javascript/comment.js"></script>
    <script src="/javascript/deletePost.js"></script>