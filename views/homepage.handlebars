<div class="container my-5">
  <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
    {{#each posts as |post|}}
      <div class="col">
        <div class="card bg-dark text-white">
          {{> post-info post}}
        </div>
      </div>
    {{else}}
      <div class="col">
        <div class="card bg-dark text-white">
          <div class="card-body">
            <h6 class="card-title text-center my-4">There are currently no posts.</h6>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>