<div class="comments">
  {{#each this}}
  <section class="comment card my-3">
    <div class="card-body">
      <div class="d-flex justify-content-between">
        <h5 class="card-title">{{user.username}}</h5>
        <small class="text-muted">{{format_date created_at}}</small>
      </div>
      <p class="card-text">{{comment_text}}</p>
    </div>
  </section>
  {{/each}}
</div>